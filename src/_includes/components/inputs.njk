{% macro input(type, name, required, title, class, attr) %}
	<label class="grid {{ class }} gap-y-2 grid-rows-1a">
		<span class="text-xl font-medium text-silver">{{ title }}</span>
		<input
			type="{{ type }}"
			name="{{ name }}"
			{% if attr %}
				{{ attr | safe }}
			{% endif %}
			{% if required %}required{% endif %}
			class="w-full px-5 text-white transition-all bg-transparent rounded-lg outline-none appearance-none valid:focus:ring-green-500 invalid:focus:ring-red-600 ring-1 focus:outline-none h-14 focus:ring-electric-violet hover:ring-electric-violet disabled:text-gray-500 disabled:hover:ring-gray-500 ring-gray-500"
		>
	</label>
{% endmacro %}

{% macro textArea(name, required, title, class, attr) %}
	<label class="relative grid gap-y-2 group">
		<span class="text-xl font-medium text-silver">{{ title }}</span>
		<textarea
			name="{{ name }}"
			{% if attr %}
				{{ attr | safe }}
			{% endif %}
			class="w-full {{ class }} px-5 py-2 h-28 text-white transition-all bg-transparent outline-none appearance-none ring-1 rounded-lg focus:outline-none focus:ring-electric-violet hover:ring-electric-violet disabled:text-gray-500 disabled:hover:ring-gray-500 ring-gray-500"
			{% if required %}required{% endif %}
		></textarea>
	</label>
{% endmacro %}

{% macro radio(type, name, required, textLeft, class) %}
	<label class="{{ class }} relative flex group">
		<input
			name="{{ name }}"
			class="sr-only peer"
			type="{{ type }}"
			{% if required %}required{% endif %}
		>
		{% if textLeft=='true' %}
			{{ caller() }}
		{% endif %}
		<span class="w-5 h-5 block relative peer-disabled:shadow-none peer-disabled:cursor-default cursor-pointer appearance-none ring-2 duration-300 group-hover:shadow-md  transition-all peer-disabled:ring-seance peer-disabled:peer-checked:bg-electric-violet peer-checked:ring-electric-violet ring-inset peer-checked:ring-[10px] ring-white before:w-2 before:h-2 before:transition-all before:top-1/2 before:left-1/2 before:-translate-x-1/2 before:-translate-y-1/2 before:absolute before:duration-300 before:rounded-full rounded-full"></span>
		{% if textLeft!='true' %}
			{{ caller() }}
		{% endif %}
	</label>
{% endmacro %}
