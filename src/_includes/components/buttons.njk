{% from "components/icon/icon.njk" import icon %}

{% macro button(type, click, attr, class, size, theme, iconName, iconLeft, link, hideText) %}
{% if link %}
	{% set tag = 'a' %}
{% else %}
	{% set tag = 'button' %}
{% endif %}
{% if size=='small' %}
	{% set iconSize = 'h-3 w-3' %}
{% elif size=='big' %}
	{% set iconSize = 'h-7 w-7' %}
{% endif %}
	<{{ tag }}
		{% if link %}
			href="{{ link }}"
		{% else %}
			type="{{ type|default('button') }}"
		{% endif %}
		{% if click %}
			@click="{{ click }}"
		{% endif %}
		{% if attr %}
			{{ attr|safe }}
		{% endif %}
		class="
			{{ class }}
			flex font-extrabold  outline-none items-center justify-center max-w-max transition-all duration-300 ease-linear py-4 px-6 rounded-[10px]
			{% if theme=='style-1' %}
				bg-white group active:text-cod-gray-2 active:bg-silver-4 ring-0 focus:ring-4 focus-visible:ring-electric-violet-7 disabled:bg-white/50 focus:outline-none
			{% elif theme=='style-2' %}
				bg-mine-shaft-3 hover:bg-emperor active:bg-black active:text-white/50 ring-0 focus-visible:ring-4 focus-visible:ring-white disabled:bg-white/50 focus:outline-none disabled:text-cod-gray-2
				{% elif theme=='style-3' %}
				bg-transparent text-cod-gray-2 hover:text-electric-violet-7 active:text-purple ring-0 focus-visible:ring-1 focus-visible:ring-black disabled:text-white/50
			{% else %}
				bg-electric-violet-6 text-white hover:bg-electric-violet-7 active:bg-purple ring-0 focus-visible:ring-4 focus-visible:ring-tolopea focus:bg-electric-violet-6 disabled:bg-electric-violet-7 focus:outline-none
			{% endif %}
		"
	>
		{% if iconLeft==true and iconName %}
			{{ icon(
				name = iconName,
				size = iconSize
			) }}
		{% endif %}
		<span class="
			{{ 'sr-only' if hideText else 'px-2 empty:hidden' }}
			{{ 'text-electric-violet-6 transition-all duration-300 disabled:text-cod-gray-2 focus:outline-none focus:text-electric-violet-7  group-hover:text-black' if theme=='style-1' }}
		">
			{{ hideText if hideText else caller() }}
		</span>
		{% if iconLeft!=true and iconName %}
			{{ icon(
				name = iconName,
				size = iconSize
			) }}
		{% endif %}
	</{{ tag }}>
{% endmacro %}
